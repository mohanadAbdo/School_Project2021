                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {

        <ul>
            <li class="nav-item" style="margin-left:15px">
                <a class="nav-link scrollto active text-white" asp-area="Identity" asp-page="/Account/Register">Register@*@Resources.Words.Register_Menu*@</a>
            </li>
            <li class="nav-item" style="margin-left:15px">
                <a class="nav-link scrollto text-white" asp-area="Identity" asp-page="/Account/Login">Login@*@Resources.Words.Login_Menu*@</a>
            </li>
        </ul>
    }
